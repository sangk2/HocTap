<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".khoahoc.subject.AddSubjectActivity">

    <TextView
        android:layout_marginTop="80dp"
        android:textColor="#FF9800"
        android:text="Thêm Khóa Học"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <EditText
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:id="@+id/EditTextSubjectTitle"
        android:hint="Tên Khóa Học"
        android:layout_width="300dp"
        android:layout_height="60dp"/>
    <EditText
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:id="@+id/EditTextSubjectCredit"
        android:hint="Số tín chỉ"
        android:layout_width="300dp"
        android:layout_height="60dp"/>
    <EditText
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:id="@+id/EditTextSubjectTime"
        android:hint="Thời gian học"
        android:layout_width="300dp"
        android:layout_height="60dp"/>
    <EditText
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:id="@+id/EditTextSubjectPlace"
        android:hint="Phòng"
        android:layout_width="300dp"
        android:layout_height="60dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:layout_margin="20dp">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnCancel"
            android:layout_weight="1"
            android:background="@drawable/background_button"
            android:backgroundTint="#ccc"
            android:textColor="@color/white"
            android:text="Hủy"
            android:textStyle="bold"/>

        <Button
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnSave"
            android:layout_weight="1"
            android:background="@drawable/background_button"
            android:backgroundTint="#2196F3"
            android:textColor="@color/white"
            android:text="Lưu"
            android:textStyle="bold"/>

    </LinearLayout>

</LinearLayout>