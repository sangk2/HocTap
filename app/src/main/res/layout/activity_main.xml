<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#1565c0">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/home" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hỗ Trợ Học Tập"
            android:textColor="#FFFFFF"
            android:textSize="24dp"
            android:textStyle="bold" />
    </androidx.appcompat.widget.Toolbar>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:id="@+id/tvUser"
        android:textSize="28dp"
        android:textColor="#009923"
        android:textStyle="bold|italic"
        android:gravity="center|top"
        android:text="Xin chào Admin"/>
    <LinearLayout
        android:layout_marginTop="50dp"
        android:layout_marginBottom="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_marginRight="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imgKhoaHoc"
                android:layout_width="130dp"
                android:layout_height="130dp"
                app:srcCompat="@drawable/khoahoc" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="130dp"
                android:layout_height="29dp"
                android:gravity="center"
                android:text="KHÓA HỌC"
                android:textSize="18dp"
                android:textColor="#FF5722"
                android:textStyle="bold"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/imgBanDo"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:src="@drawable/map" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="130dp"
                android:layout_height="29dp"
                android:gravity="center"
                android:textColor="#FF5722"
                android:text="BẢN ĐỒ"
                android:textSize="18dp"
                android:textStyle="bold"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_marginRight="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/imgTinTuc"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:src="@drawable/tintuc" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="130dp"
                android:layout_height="29dp"
                android:gravity="center"
                android:textColor="#FF5722"
                android:text="TIN TỨC"
                android:textSize="18dp"
                android:textStyle="bold"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imgXaHoi"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:src="@drawable/xahoi" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="130dp"
                android:layout_height="29dp"
                android:gravity="center"
                android:textColor="#FF5722"
                android:text="XÃ HỘI"
                android:textSize="18sp"
                android:textStyle="bold"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>